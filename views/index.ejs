    <link href="/static/mystyle.css" rel="stylesheet" />
    <title>CRUD 주특기 사전과제</title>
    <script>
      // Html 파일이 전부 로딩되었을 경우 실행
      $(document).ready(function () {
        get_posts();
      });


      // Posts를 가져온다.
      function get_posts() {
        $("#tbody-box").empty(); // 상품창의 리스트를 삭제한다.
        $.ajax({
          type: "GET",
          beforeSend: function (xhr) {
            xhr.setRequestHeader(
              "Authorization",
              "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYxOWQ5YTNhMTJmY2UyMGUwMjc2YjIwNyIsImlhdCI6MTYzNzc1MzA1MywiZXhwIjoxNjM3OTI1ODUzfQ.HfBdOt2CqM_NRFzy2FwgS4ExTNg6qTLAP65xO2EPyKc"
            );
          },
          url: `/posts`,
          data: {},
          success: function (response) {
            //카테고리에 해당하는 goods를 가지고 온다.
            let posts = response;
            for (let i = 0; i < posts.length; i++) {
              const _id = posts[i]["_id"];
              const username = posts[i]["username"];
              const title = posts[i]["title"];
              const content = posts[i]["content"];
              const createdAt = posts[i]["createdAt"];
              console.log(_id, username, title, content, createdAt);
              make_post(
                posts.length - i,
                _id,
                username,
                title,
                content,
                createdAt
              );
            }
          },
        });
      }

      // 가져온 Posts를 Table Rows로 삽입한다.
      function make_post(num, _id, username, title, content, createdAt) {
        let temp_html = `
            <tr id="word-${_id}">
                <td>${num}</td>
                <td>${username}</td>
                <td><a href="/posts/${_id}">${title}</a></td>
                <td>${createdAt}</td>
            </tr>`;
        $("#tbody-box").append(temp_html);
      }
    </script>
    <style>
      .card {
